{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
    <h1 class="card-title fw-semibold mb-4">Types de m√©dicament</h1>
    <a href="{{ path('app_type_new') }}" class="btn btn-primary mt-4 mb-4">Ajouter</a>

    <table class="table" style="text-align: center; align-content: center;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.description }}</td>
                <td>
                    <a href="{{ path('app_type_show', {'id': type.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="btn btn-success" >edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
